<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosch.binin.mapper.MaterialReturnMapper">

    <resultMap id="BaseResultMap" type="com.bosch.binin.api.domain.MaterialReturn">
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="materialCode" column="material_code" jdbcType="VARCHAR"/>
            <result property="ssccNumber" column="sscc_number" jdbcType="VARCHAR"/>
            <result property="type" column="type" jdbcType="INTEGER"/>
            <result property="quantity" column="quantity" jdbcType="DECIMAL"/>
            <result property="moveType" column="move_type" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,material_code,sscc_number,
        type,quantity,move_type,
        status,create_by,update_by,
        create_time,update_time,remark,
        delete_flag
    </sql>

    <select id="list" resultType="com.bosch.binin.api.domain.vo.MaterialReturnVO">
        select mr.*,
        mm.name as material_name
        from material_return mr
        left join (SELECT * from md_material where delete_flag = '0') mm on mr.material_nb = mm.code
        where mr.delete_flag = 0
        <if test="materialCode != null and materialCode != ''">
            AND mr.material_nb=#{materialCode}
        </if>
        <if test="wareCode != null and wareCode != ''">
            AND mr.ware_code=#{wareCode}
        </if>

        <if test="type != null ">
            AND mr.type=#{type}
        </if>

        <if test="status != null ">
            AND (mr.status = #{status})
        </if>
        <if test="createBy != null and createBy != ''">and mr.create_by like concat('%', #{createBy}, '%')</if>
        <if test="startCreateTime != null">and mr.create_time <![CDATA[ >= ]]> #{startCreateTime}</if>
        <if test="endCreateTime != null">and mr.create_time <![CDATA[ <= ]]> #{endCreateTime}</if>
        <if test="startUpdateTime != null">and mr.update_time <![CDATA[ >= ]]> #{startUpdateTime}</if>
        <if test="startUpdateTime != null">and mr.update_time <![CDATA[ <= ]]> #{endUpdateTime}</if>

        order by create_time desc
    </select>
</mapper>
