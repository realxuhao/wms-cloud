<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosch.masterdata.mapper.EcnMapper">

    <resultMap id="BaseResultMap" type="com.bosch.masterdata.api.domain.Ecn">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="materialCode" column="material_code" jdbcType="VARCHAR"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="classification" column="classification" jdbcType="VARCHAR"/>
            <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
        <result property="plan" column="plan" jdbcType="VARCHAR"/>

    </resultMap>

    <sql id="Base_Column_List">
        id,material_code,create_by,
        update_by,create_time,update_time,
        status,remark,classification,plan,
        delete_flag
    </sql>

    <select id="selectList" parameterType="EcnDTO" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from md_ecn
        <where>
            delete_flag='0'
            <if test="materialCode != null  and materialCode != ''">and material_code like concat('%', #{materialCode},
                '%')
            </if>
            <if test="status != null ">and status = #{status}</if>
            <if test="classification != null and classification != '' ">and classification = #{classification}</if>
            <if test="plan != null and plan != '' ">and plan = #{plan}</if>
        </where>
    </select>

    <update id="updateEcn" parameterType="EcnDTO">

    </update>

    <update id="deleteEcn" parameterType="String">
        update md_ecn
        set delete_flag='1'where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="validateRecord" resultType="integer" parameterType="EcnDTO">
        SELECT COUNT(*) FROM md_ecn
        WHERE delete_flag='0' and  (material_code) IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            (#{item.materialCode})
        </foreach>
    </select>
</mapper>
