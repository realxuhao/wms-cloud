<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosch.masterdata.mapper.AreaMapper">

    <resultMap type="Area" id="AreaResult">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="wareId" column="ware_id"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="areaType" column="area_type"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
    </resultMap>
    <resultMap type="AreaVO" id="AreaVOResult">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="wareCode" column="wareCode"/>
        <result property="wareName" column="wareName"/>
        <result property="wareId" column="ware_id"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="areaType" column="area_type"/>
        <result property="plantNb" column="plant_nb"/>

    </resultMap>
    <sql id="selectAreaVo">
        select id,
               code,
               name,
               ware_id,
               create_by,
               update_by,
               create_time,
               update_time,
               status,
               remark,
               area_type
        from md_area
    </sql>
    <sql id="areaVOList">
        SELECT a.id,
               a.CODE         as code,
               a.NAME         as name,
               w.code         as wareCode,
               w.name         as wareName,
               a.ware_id,
               a.create_by,
               a.update_by,
               a.create_time,
               a.update_time,
               a.remark,
               a.area_type,
               w.factory_code as plant_nb
        FROM md_area AS a
                 LEFT JOIN md_ware as w on a.ware_id = w.id
    </sql>
    <select id="selectAreaList" parameterType="Area" resultMap="AreaResult">
        <include refid="selectAreaVo"/>
        <where>
            <if test="code != null  and code != ''">and code = #{code}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="wareId != null ">and ware_id = #{wareId}</if>
            <if test="status != null ">and status = #{status}</if>
        </where>
    </select>
    <select id="selectAreaVOList" resultMap="AreaVOResult">
        <include refid="areaVOList"/>
        where
            a.status = 1
            <if test="code != null  and code != ''">and a.code like concat('%', #{code}, '%')</if>
            <if test="name != null  and name != ''">and a.name like concat('%', #{name}, '%')</if>
            <if test="wareId != null ">and a.ware_id = #{wareId}</if>
            <if test="wareCode != null ">and w.code like concat('%', #{wareCode}, '%')</if>


    </select>
    <select id="selectAreaById" parameterType="Integer" resultMap="AreaResult">
        <include refid="selectAreaVo"/>
        where id = #{id}
    </select>

    <insert id="insertArea" parameterType="Area">
        insert into md_area
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="wareId != null">ware_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="areaType !=null">area_type,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="wareId != null">#{wareId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="areaType != null">#{areaType},</if>

        </trim>
    </insert>

    <update id="updateArea" parameterType="Area">
        update md_area
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="wareId != null">ware_id = #{wareId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="areaType != null">area_type = #{areaType},</if>

        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAreaById" parameterType="Integer">
        delete
        from md_area
        where id = #{id}
    </delete>

    <delete id="deleteAreaByIds" parameterType="String">
        delete from md_area where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>