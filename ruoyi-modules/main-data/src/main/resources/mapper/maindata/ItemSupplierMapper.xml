<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosch.maindata.mapper.ItemSupplierMapper">
    
    <resultMap type="ItemSupplier" id="ItemSupplierResult">
        <result property="id"    column="id"    />
        <result property="itemInfoId"    column="item_info_id"    />
        <result property="supplierInfoId"    column="supplier_info_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectItemSupplierVo">
        select id, item_info_id, supplier_info_id, create_by, update_by, create_time, update_time, status, remark from item_supplier
    </sql>

    <select id="selectItemSupplierList" parameterType="ItemSupplier" resultMap="ItemSupplierResult">
        <include refid="selectItemSupplierVo"/>
        <where>  
            <if test="itemInfoId != null "> and item_info_id = #{itemInfoId}</if>
            <if test="supplierInfoId != null "> and supplier_info_id = #{supplierInfoId}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectItemSupplierById" parameterType="Long" resultMap="ItemSupplierResult">
        <include refid="selectItemSupplierVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertItemSupplier" parameterType="ItemSupplier" useGeneratedKeys="true" keyProperty="id">
        insert into item_supplier
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemInfoId != null">item_info_id,</if>
            <if test="supplierInfoId != null">supplier_info_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemInfoId != null">#{itemInfoId},</if>
            <if test="supplierInfoId != null">#{supplierInfoId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateItemSupplier" parameterType="ItemSupplier">
        update item_supplier
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemInfoId != null">item_info_id = #{itemInfoId},</if>
            <if test="supplierInfoId != null">supplier_info_id = #{supplierInfoId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteItemSupplierById" parameterType="Long">
        delete from item_supplier where id = #{id}
    </delete>

    <delete id="deleteItemSupplierByIds" parameterType="String">
        delete from item_supplier where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>